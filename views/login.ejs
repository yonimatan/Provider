<%- include('partials/header.ejs') %>
<h1 id="logo" style="text-align: center; padding-top: 5%">LOGIN</h1>
<div style="height: 40vh" class="row">
    <div class="d-flex align-items-center justify-content-center" >
        <form id="form" class="w-50" method="post" action="/login">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input placeholder="John Doe" name="username" type="text" class="form-control" id="username" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="InputPassword1" class="form-label">Password</label>
                <input placeholder="*******" name="password" type="password" class="form-control" id="InputPassword1">
            </div>
            <button style="border: none" type="submit"><img style="width: 10vw; border: none" src="Login-button.png" alt=""></button>
            <button class="btn btn-secondary secondary"><a style="color: black" href="/signup">Signup Instead</a></button>
        </form>
    </div>
</div>
<%- include('partials/footer.ejs') %>