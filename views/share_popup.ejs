<%- include('partials/header.ejs') %>
<div class="container" style="margin-top: 20%">
    <form action="/sendmail" method="post">
        <input class="form-control" type="email" name="email" id="email" placeholder="enter recipient email">
        <input name="id" type="text" value="<%-id%>" hidden>
        <input name="type" type="text" value="<%-type%>" hidden>
        <button style="margin-top: 2%; background-color: greenyellow" class="btn" type="submit">Send Mail</button>
    </form>
</div>
